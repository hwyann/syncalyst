<div class="inprogress-card mt-4">
  <h1>Let's wrap up!</h1>
  <% @meeting.attendances.each do |attendance|  %>
    <div class="wrapup-list-item">
      <%= cl_image_tag "#{attendance.user.photo.key}", alt: "task-user-avatar", class: "avatar mx-1" %>
      <div class="task-form">
        <%= simple_form_for([@meeting, @task]) do |f| %>
          <%= f.input :user_id, label: false , :input_html => { :value => attendance.user.id, :type => 'hidden' } %>
          <%= f.input :description, placeholder: "Press enter to assign task to #{attendance.user.nickname}", label: false %>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="task-heading d-flex justify-content-between align-items-center">
    <h2>Task list</h2>
    <% if @meeting.trello_board == "" %>
      no trello board attached
    <% else %>
      <%= link_to 'Link to Trello', @meeting.trello_board, target: "_blank", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="task-list mt-4">
    <% @meeting.tasks.each do |task| %>
      <div class="task-cards d-flex justify-content-between btn btn-secondary align-items-center m-1">
        <div class="avatar d-flex justify-content-start align-items-center">
          <%= cl_image_tag "#{task.user.photo.key}", alt: "task-user-avatar", class: "avatar mx-1" %>
          <%= task.user.nickname %>
        </div>
        <div class="task-info">
          <%= task.description %>
        </div>
      </div>
    <% end %>
  </div>
</div>