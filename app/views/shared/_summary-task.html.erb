<div class="p-2 d-flex flex-column align-items-center">
  <h2 class="m-3">Tasks created and sent to Trello!</h2>
  <% @meeting.tasks.each do |task| %>
    <div class="task-cards-complete d-flex justify-content-between align-items-center my-3">
      <div class="avatar d-flex justify-content-start align-items-center">
        <%= cl_image_tag "#{task.user.photo.key}", alt: "task-user-avatar", class: "avatar mx-1" %>
        <%= task.user.nickname %>
      </div>
      <div class="task-info">
        <%= task.description %>
      </div>
    </div>
  <% end %>
</div>